<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bghome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.hujayapps.IqroSatuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iqro_pertama"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="42dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hujay_apps"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:background="@drawable/teorisatu"
        android:onClick="movesatuteori"
        tools:layout_editor_absoluteY="132dp"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/imageButton"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_alignLeft="@+id/imageButton8"
        android:layout_alignStart="@+id/imageButton8" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:background="@drawable/nulissatu"
        android:onClick="movesatunulis"
        tools:layout_editor_absoluteY="132dp"
        tools:layout_editor_absoluteX="186dp"
        android:layout_above="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginBottom="26dp"
        android:id="@+id/imageButton9" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:background="@drawable/gamesatu"
        android:onClick="movesatugame"
        tools:layout_editor_absoluteY="314dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:id="@+id/imageButton8"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:background="@drawable/qasatu"
        android:onClick="movesatuqa"
        tools:layout_editor_absoluteY="314dp"
        tools:layout_editor_absoluteX="186dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="87dp"
        android:id="@+id/imageButton2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButton8"
        android:layout_toEndOf="@+id/imageButton8" />

</RelativeLayout>
