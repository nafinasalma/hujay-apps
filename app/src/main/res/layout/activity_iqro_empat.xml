<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    tools:context="com.example.asus.hujayapps.IqroEmpatActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iqro_empat"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="42dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hujay_apps4"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:onClick="moveempatteori"
        android:background="@drawable/teoriempat"
        android:layout_above="@+id/imageButton16"
        android:layout_alignLeft="@+id/imageButton16"
        android:layout_alignStart="@+id/imageButton16" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:onClick="moveempatnulis"
        android:background="@drawable/nulisempat"
        android:layout_above="@+id/imageButton15"
        android:layout_alignLeft="@+id/imageButton15"
        android:layout_alignStart="@+id/imageButton15" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:onClick="moveempatgame"
        android:background="@drawable/gameempat"
        android:layout_alignTop="@+id/imageButton15"
        android:layout_toLeftOf="@+id/imageButton15"
        android:layout_toStartOf="@+id/imageButton15"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/imageButton16" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:onClick="moveempatqa"
        android:background="@drawable/qaempat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="107dp"
        android:id="@+id/imageButton15" />

</RelativeLayout>
