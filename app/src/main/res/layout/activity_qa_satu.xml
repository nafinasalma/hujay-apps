<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.hujayapps.QaSatuActivity">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/pilganbtn"
        android:layout_marginTop="167dp"
        android:id="@+id/ib_pilgansatu"
        android:onClick="pilgansatu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/ib_esaybtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/esaybtn"
        android:onClick="esaysatu"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/ib_pilgansatu"
        android:layout_alignLeft="@+id/ib_pilgansatu"
        android:layout_alignStart="@+id/ib_pilgansatu" />

</RelativeLayout>
