<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    android:orientation="vertical"
    tools:context=".HurufFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ibPrevsatu"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/prev"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivSatugambar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/ibSoundsatu"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:id="@+id/ibNextsatu"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/ibSoundsatu"
            android:layout_toEndOf="@+id/ibSoundsatu"
            android:layout_toRightOf="@+id/ibSoundsatu"
            android:layout_weight="1"
            android:background="@drawable/next"
            android:visibility="visible" />

        </LinearLayout>

    <TextView
        android:id="@+id/tvTittlesatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivSatugambar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ibSoundsatu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/ivSatugambar"
            android:layout_alignStart="@+id/ivSatugambar"
            android:layout_below="@+id/tvTittle"
            android:layout_weight="1.3"
            android:background="@drawable/soundbtn"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/ibSoundsatu"
            android:layout_toEndOf="@+id/ibSoundsatu"
            android:layout_toRightOf="@+id/ibSoundsatu"
            android:layout_weight="1"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cara Membaca:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvCaraPengunaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ibSoundsatu"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Fathah"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Kasrah"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Dhomah"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivLafadz"
                    android:layout_width="138dp"
                    android:layout_height="120dp"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_toLeftOf="@+id/textView12"
                    android:layout_toStartOf="@+id/textView12"
                    android:src="@drawable/alifharokat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDibacaFathah"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:gravity="center_vertical"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvDibacaKasrah"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:gravity="center_vertical"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvDibacaDhomah"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:gravity="center_vertical"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cara Penulisan:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvCaraPenulisan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ibSoundsatu"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cara Menyambungkan Huruf:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/ivMenyambungHuruf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_toLeftOf="@+id/textView12"
                    android:layout_toStartOf="@+id/textView12" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
