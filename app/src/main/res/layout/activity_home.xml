<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    tools:context="com.example.asus.hujayapps.HomeActivity">

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/pengaturan"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:onClick="showPopup"
        android:layout_alignTop="@+id/custom_font"
        android:layout_toRightOf="@+id/font_custom"
        android:layout_toEndOf="@+id/font_custom" />

    <TextView
        android:id="@+id/custom_font"
        android:layout_marginTop="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hujay_apps"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/font_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aplikasi_belajar_huruf_hijaiyah"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_below="@+id/custom_font"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/custom_font"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton3"
                android:onClick="pindahsatu"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/levelsatu"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:onClick="pindahdua"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:background="@drawable/leveldua"
                android:layout_alignTop="@+id/imageButton3"
                android:layout_toRightOf="@+id/imageButton3"
                android:layout_toEndOf="@+id/imageButton3" />

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:onClick="pindahtiga"
                android:background="@drawable/leveltiga"
                android:layout_below="@+id/imageButton3"
                android:layout_alignLeft="@+id/imageButton3"
                android:layout_alignStart="@+id/imageButton3"
                android:id="@+id/imageButton5" />

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:onClick="pindahempat"
                android:background="@drawable/levelempat"
                android:layout_below="@+id/imageButton4"
                android:layout_toRightOf="@+id/imageButton5"
                android:layout_toEndOf="@+id/imageButton5"
                android:id="@+id/imageButton6" />

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:onClick="pindahlima"
                android:background="@drawable/levellima"
                android:layout_below="@+id/imageButton5"
                android:layout_alignLeft="@+id/imageButton5"
                android:layout_alignStart="@+id/imageButton5"
                android:id="@+id/imageButton7" />

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:onClick="pindahenam"
                android:background="@drawable/levelenam"
                android:layout_below="@+id/imageButton6"
                android:layout_toRightOf="@+id/imageButton7"
                android:layout_toEndOf="@+id/imageButton7" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
