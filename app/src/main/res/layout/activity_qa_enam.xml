<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    tools:context="com.example.asus.hujayapps.QaEnamActivity">

    <ImageButton
        android:id="@+id/ib_pilgansatu"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/pilganbtn"
        android:onClick="pilgansatu"
        android:layout_marginTop="157dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/ib_esaybtn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/esaybtn"
        android:onClick="esaysatu"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/ib_pilgansatu"
        android:layout_alignLeft="@+id/ib_pilgansatu"
        android:layout_alignStart="@+id/ib_pilgansatu" />

</RelativeLayout>
